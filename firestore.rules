rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // User Profiles
    match /users/{userId} {
      allow read: if isOwner(userId);
      // Security: Prevent privilege escalation by restricting role assignment
      allow create: if isOwner(userId) && request.resource.data.get('role', 'tester') == 'tester';
      allow update: if isOwner(userId) && request.resource.data.get('role', 'tester') == resource.data.get('role', 'tester');
      allow delete: if isOwner(userId);
    }

    // Missions (Internal Apps)
    match /missions/{missionId} {
      allow create: if isSignedIn() && getUserData().role == 'developer';
      allow update, delete: if isSignedIn() && resource.data.architectId == request.auth.uid;

      // FIXED: Tightened back to role/tier checks.
      allow read, list: if isSignedIn() && (resource.data.architectId == request.auth.uid || getUserData().role == 'developer');
    }

    // Enrollments
    match /enrollments/{enrollmentId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || resource.data.architectId == request.auth.uid);
    }

    // Anomalies (Bug Reports)
    match /anomalies/{anomalyId} {
      allow create: if isSignedIn() && request.resource.data.reporterId == request.auth.uid;
      allow read: if isSignedIn() && (resource.data.reporterId == request.auth.uid || resource.data.architectId == request.auth.uid);
      allow update: if isSignedIn() && (resource.data.reporterId == request.auth.uid || resource.data.architectId == request.auth.uid);
    }

    // External Betas (Publicly tracked)
    match /external_betas/{betaId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.addedBy == request.auth.uid;
      allow update: if isSignedIn() && resource.data.addedBy == request.auth.uid;
    }
  }
}
