rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // User Profiles
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Missions (Internal Apps & Community Signals)
    match /missions/{missionId} {
      // Allow creation if developer OR if it's a community mission
      // Enforce architectId ownership on creation
      allow create: if isSignedIn()
        && request.resource.data.architectId == request.auth.uid
        && (
          getUserData().role == 'developer' ||
          request.resource.data.type == 'COMMUNITY'
        );

      // Allow update/delete only by owner (architect)
      allow update, delete: if isSignedIn() && resource.data.architectId == request.auth.uid;

      // Allow read to all signed in users (needed for Dashboard and lists)
      allow read, list: if isSignedIn();
    }

    // Enrollments
    match /enrollments/{enrollmentId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || resource.data.architectId == request.auth.uid);
    }

    // Anomalies (Bug Reports)
    match /anomalies/{anomalyId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn(); // Architects need to read, Reporters need to read
      allow update: if isSignedIn() && (resource.data.reporterId == request.auth.uid || resource.data.architectId == request.auth.uid);
    }

    // External Betas (Keeping for future compatibility, though currently unused)
    match /external_betas/{betaId} {
      allow read, create: if isSignedIn();
      allow update: if isSignedIn() && resource.data.addedBy == request.auth.uid;
    }
  }
}
